import pygame

def draw_text(screen, text, x, y, color, size=32, center=False):
    font = pygame.font.Font(None, size)
    text_surface = font.render(text, True, color)
    if center:
        text_rect = text_surface.get_rect(center=(x, y))
        screen.blit(text_surface, text_rect)
    else:
        screen.blit(text_surface, (x, y))

def draw_health_bar(screen, x, y, width, height, ratio):
    # Fond de la barre
    pygame.draw.rect(screen, (50, 50, 60), (x, y, width, height))
    # Vie actuelle
    pygame.draw.rect(screen, (255, 0, 255), (x, y, width * ratio, height))